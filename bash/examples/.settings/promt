#echo "Reading '~/.settings/promt' ..."

function git_branch() {
    git branch --show-current 2> /dev/null
}

# If the shell is zsh, the variable $ZSH_VERSION is defined.
if [ -n "${ZSH_VERSION}" ]; then
    setopt PROMPT_SUBST
    export PS1='%F{green}%n%f@%F{red}%m%f %3~ [$(git_branch)] %# '
else
    _BOLD="\[\033[01m\]"
    _UNDERLINE="\[\033[04m\]"
    _BLINK="\[\033[05m\]"
    # FG - Fore Ground
    _FG_GREEN="\[\033[32m\]"
    _FG_BLUE="\[\033[34m\]"
    _FG_RED="\[\033[31m\]"
    # BG - Back Ground
    _BG_GREEN="\[\033[42m\]"
    _BG_BLUE="\[\033[44m\]"
    _BG_RED="\[\033[41m\]"
    _RESET="\[\033[00m\]"
    # root
    _SEPARATOR="#"
    # user
    _SEPARATOR="\$"
    export PS1="${_FG_GREEN}${_BOLD}\u${_RESET}@${_RESET}${_FG_RED}${_BOLD}\h:${_RESET}\w [\$(git_branch)] ${_SEPARATOR} ${_RESET}"
fi